    <script>
        // Configura a data atual ao carregar a página
        window.onload = function() {
            const today = new Date();
            const formattedDate = today.toISOString().substr(0, 10);
            document.getElementById('dataSolicitacao').value = formattedDate;
        };
        
        document.getElementById('imprimir').addEventListener('click', function() {
            window.print();
        });
        
        document.getElementById('limpar').addEventListener('click', function() {
            document.getElementById('prescricaoForm').reset();
            // Redefine os valores padrão após limpar
            document.getElementById('antimicrobiano1').value = "CEFAZOLINA 1g";
            document.getElementById('via1').value = "EV";
            document.getElementById('posologia1').value = "8/8H";
            document.getElementById('duracao1').value = "24h";
            
            const today = new Date();
            const formattedDate = today.toISOString().substr(0, 10);
            document.getElementById('dataSolicitacao').value = formattedDate;
        });
    </script>
